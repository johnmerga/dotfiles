# this script is used to install the necessary dependencies like neovim, tmux, zsh, etc.
# it also installs the necessary plugins for neovim and tmux
# it also installs the necessary fonts for the terminal
# it also installs the necessary python packages for neovim
#

# install neovim
echo "Installing neovim..."
sudo apt-get install neovim -y

# install tmux
echo "Installing tmux..."
sudo apt-get install tmux -y

# install zsh
echo "Installing zsh..."
sudo apt-get install zsh -y

# install oh-my-zsh
sh -c "$(curl -fsSL https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"

# install stow
# stow is a symlink farm manager which takes distinct packages of software and/or data located in separate directories on the filesystem, and makes them appear to be installed in the same place.
# https://www.gnu.org/software/stow/
echo "Installing stow..."
sudo apt-get install stow -y

# install fzf
# fzf is a general-purpose command-line fuzzy finder.
echo "Installing fzf..."
sudo apt-get install fzf -y

# install ripgrep
# ripgrep recursively searches directories for a regex pattern
echo "Installing ripgrep..."
sudo apt-get install ripgrep -y

# install bat
# bat is a cat clone with syntax highlighting and Git integration
echo "Installing bat..."
sudo apt-get install bat -y

# install fd
# fd is a simple, fast and user-friendly alternative to find
echo "Installing fd..."
sudo apt-get install fd-find -y


